AC_PREREQ(2.13)
AC_INIT(imaxabs.c)

CC=${CC-cc}
AC_SUBST(CC)
AS=${AS-as}
AC_SUBST(AS)
AR=${AR-ar}
AC_SUBST(AR)
LD=${LD-ld}
AC_SUBST(LD)
RANLIB=${RANLIB-ranlib}
AC_SUBST(RANLIB)
DLLTOOL=${DLLTOOL-dlltool}
AC_SUBST(DLLTOOL)
DLLWRAP=${DLLWRAP-dllwrap}
AC_SUBST(DLLWRAP)
AC_CANONICAL_SYSTEM

case "$target_os" in
*cygwin*)
  MNO_CYGWIN=-mno-cygwin
  ;;
*)
  # Build it for MSVCRT by default.
  MNO_CYGWIN=
  ;;
esac

AC_SUBST(MNO_CYGWIN)

AC_PROG_INSTALL
AC_OUTPUT(Makefile)

