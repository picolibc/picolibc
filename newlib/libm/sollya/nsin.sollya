tfunc = proc (x) {
	return sin(x);
};

lo = 0x1p-27;
hi = Pi/4;
ivl = [lo,hi];
fitivl = [lo;hi];
maxerr = 0x1p-53;

sindeg = inf(guessdegree(tfunc(_x_),fitivl,maxerr));

Psin = fpminimax(tfunc(_x_), sindeg, [|D...|], fitivl);

display = decimal!;
print("static const double sin_coeffs[", sindeg+1, "] = {");
display = hexadecimal!;
for i from 0 to sindeg do print("   ", coeff(Psin,i), ",");
print("};");

cosdeg = 12;

Pcos = fpminimax(1-cos(_x_), cosdeg, [|D...|], fitivl);
display = decimal!;
print("static const double cos_coeffs[", cosdeg+1, "] = {");
display = hexadecimal!;
for i from 0 to cosdeg do print("   ", coeff(Pcos,i), ",");
print("};");
