gamma = proc(x) {
	var g, i, y;

	y = x + 10;

	g = Stieltjes(y - 1, 3);
	for i from 1 to 10 do {
		y = y - 1;
		g = g / y;
	};
	return g;
};

gfunc = proc(x) { return 1- gamma(x + 1); };

