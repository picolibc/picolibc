prec = 256!;
sindeg = 11;
lo = 0x1p-27;
mi = 0.75;
hi = Pi/2;
lofitivl = [lo;mi];
hifitivl = [mi-mi;hi-mi];

Psinlo = fpminimax(sin(_x_), sindeg, [|D...|], lofitivl);
Psinhi = fpminimax(sin(_x_+mi), sindeg, [|D...|], hifitivl);

display = decimal!;
print("static const double sin_coeffs_lo[", sindeg+1, "] = {");
display = hexadecimal!;
for i from 0 to sindeg do print("   ", coeff(Psinlo,i), ",");
print("};");

display = decimal!;
print("static const double sin_coeffs_hi[", sindeg+1, "] = {");
display = hexadecimal!;
for i from 0 to sindeg do print("   ", coeff(Psinhi,i), ",");
print("};");

