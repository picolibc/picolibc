dir="$(dirname "$0")"

# select the program
elf="$1"
shift

done=0
while [ $# -gt 0 -a $done -eq 0 ]; do
  case "$1" in
    --stdin)
      if [ $# -lt 2 ]; then
        echo "Error: --stdin requires a quoted string"
        exit 1
      fi
      stdin="$2"
      shift 2
      ;;
    --args)
      if [ $# -lt 2 ]; then
        echo "Error: --args requires a quoted string"
        exit 1
      fi
      args="$2"
      shift 2
      ;;
    *)
      done=1
      ;;
  esac
done

qemu="qemu-system-m68k"

# Point the semihosting driver at our new chardev

semi=enable=on,chardev=stdio0,arg="program-name $args"

case "$elf" in
    *_softfp)
        elfbase=`echo "$elf" | sed 's/_softfp//'`
        ;;
    *)
        elfbase="$elf"
        ;;
esac

case "$elfbase" in
    *m5307|*m51qe|*m5329|*m5407|*m54455|*m5475)
        CPU=any
        ;;
    *m5206|*m5206e)
        CPU=m5206
        ;;
    *m5208)
        CPU=m5208
        ;;
    *m680?0)
        CPU=`echo "$elfbase" | sed 's/.*\(m680.0\)$/\1/'`
        ;;
    *)
        CPU=m68020
        ;;
esac

echo "$stdin" | $qemu \
  -chardev stdio,id=stdio0,mux=on \
  -machine virt \
  -cpu "$CPU" \
  -semihosting-config "$semi" \
  -monitor none \
  -serial none \
  -net none \
  -nographic \
  -kernel "$elf" "$@"
