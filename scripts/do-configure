DIR="$(dirname "$0")"

# First argument must be target architecture

case "$1" in
    "")
	echo "Usage: $0 <architecture>" 1>&2
	exit 1
	;;
esac

export ARCH="$1"
shift

# Find cross compile configuration

CROSS="$DIR"/cross-"$ARCH".txt

if [ -f "$CROSS" ]; then
    :
else
    echo "$0: $ARCH not supported" 1>&2
    exit 1
fi

# 'clang-' prefix uses clang instead of gcc

case "$ARCH" in
    clang-*)
	ARCH=$(echo "$ARCH" | sed 's/clang-//')
	;;
esac

case "$*" in
    *-Dio-long-double=true*)
	case "$ARCH" in
	    *rv[36][24]*|*riscv*|*aarch64*|*power9-fp128*|*sparc*)
		case "$*" in
		    *-Dtinystdio=false*)
			echo "io-long-double for legacy stdio not supported on riscv, aarch64, power-fp128 or sparc"
			exit 77
			;;
		esac
		;;
	    *power*|*avr*)
		echo "io-long-double not supported on power double double or avr"
		exit 77
		;;
	esac
	;;
esac

# Check for sysroot-install and automatically set prefix if needed

case "$*" in
    *sysroot-install=true*)
	case "$*" in
	    *-Dprefix*)
		:
		;;
	    *)
		SYSROOT_ORIG="$("${ARCH}-gcc" -print-sysroot)"
		SYSROOT="$(readlink -f "$SYSROOT_ORIG")"
		PREFIX="-Dprefix=$SYSROOT"
		;;
	esac
	;;
esac

# Run meson

case "$PREFIX" in
    "")
	meson setup \
	      -Dincludedir=picolibc/"$ARCH"/include \
	      -Dlibdir=picolibc/"$ARCH"/lib \
	      --cross-file "$CROSS" \
	      "$@" \
	      "$DIR"/..
	;;
    *)
	meson setup \
	      -Dincludedir=picolibc/"$ARCH"/include \
	      -Dlibdir=picolibc/"$ARCH"/lib \
	      --cross-file "$CROSS" \
	      "$PREFIX" "$@" \
	      "$DIR"/..
	;;
esac
